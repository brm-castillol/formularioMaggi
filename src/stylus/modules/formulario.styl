.cont_registroM
	
	margin-top 2rem
	

	label
		color $Gris
		display block
		font-family $QuickL
		font-size 1.2rem
		left 2rem
		position absolute
		top 0.8rem
		transitionBase(0.3s)
		



	.form-control			
		background linear-gradient(to bottom, rgba(255,255,255,0.8) 0%,rgba(197,197,197,0.8) 100%)
		box-shadow none
		transitionBase(0.3s)
		border-radius 13px
			
			
		&:focus
			background rgba(251, 251, 251, .0)
			border-color $GrisC
			outline 0 !important
			outline none !important
		
	.form-group
		position relative
		margin-bottom 2rem
	
	input
		font-family $QuickL
		color $Negro
							

.checkbox

	label
		display inline-block
		cursor pointer
		position relative
		padding-left 1rem
		
		&:before
			color $RojoC
			content "\e157"
			display inline-block
			font-family "Glyphicons Halflings"
			left -1rem
			position absolute
			
		a
			position relative
			z-index 1
			
	input
		cursor pointer
		left 0
		opacity 0
		width 100%
		z-index 1
		
		&[type="checkbox"]:checked + label:before
			content "\e067"
	
	.text_terminos
		margin-left 1rem
		font-family $QuickL
		
	a
		color $RojoO
		font-family $QuickL
			
.input-activo
	label
		color $Gris !important
		top -1.7rem !important
		left 0.2rem !important
		transform scale(0.8)
		
	.form-control
		background transparent !important
		border-color $GrisC





					




